<Window x:Class="Library_Management_System.BookInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_System"
        mc:Ignorable="d"
        Title="BookInformation" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name = "NameLabel" Grid.Row="1" Content="Name" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name = "AuthorLabel" Grid.Row="2" Content="Author" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name = "IDLabel" Grid.Row="3" Content="ID" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name = "LoanedToLabel" Grid.Row="4" Content="Loaned to" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
